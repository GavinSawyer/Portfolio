{
  "name": "website",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/website/src",
  "prefix": "websiteApp",
  "targets": {
    "prebuild": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node git-version.js"
      }
    },
    "browser": {
      "dependsOn": ["prebuild"],
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/website/browser",
        "index": "apps/website/src/index.html",
        "main": "apps/website/src/main.ts",
        "polyfills": "apps/website/src/polyfills.ts",
        "tsConfig": "apps/website/tsconfig.app.json",
        "inlineStyleLanguage": "sass",
        "assets": [
          "apps/website/src/assets",
          "apps/website/src/favicon.png",
          "apps/website/src/robots.txt",
          "apps/website/src/sitemap.xml"
        ],
        "styles": ["apps/website/src/styles.sass"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/website/src/environments/environment.ts",
              "with": "apps/website/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": true,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "dependsOn": ["prebuild"],
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "website:browser:production"
        },
        "development": {
          "browserTarget": "website:browser:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "dependsOn": ["prebuild"],
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "website:browser"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/website/**/*.ts", "apps/website/**/*.html"]
      }
    },
    "server": {
      "dependsOn": ["prebuild"],
      "executor": "@angular-devkit/build-angular:server",
      "options": {
        "outputPath": "dist/apps/website/server",
        "main": "apps/website/server.ts",
        "tsConfig": "apps/website/tsconfig.server.json",
        "inlineStyleLanguage": "sass"
      },
      "configurations": {
        "production": {
          "outputHashing": "media",
          "fileReplacements": [
            {
              "replace": "apps/website/src/environments/environment.ts",
              "with": "apps/website/src/environments/environment.prod.ts"
            }
          ]
        },
        "development": {
          "optimization": false,
          "sourceMap": true,
          "extractLicenses": false
        }
      },
      "defaultConfiguration": "production",
      "production": {
        "outputHashing": "media",
        "fileReplacements": [
          {
            "replace": "apps/website/src/environments/environment.ts",
            "with": "apps/website/src/environments/environment.prod.ts"
          }
        ]
      },
      "development": {
        "optimization": false,
        "sourceMap": true,
        "extractLicenses": false
      }
    },
    "serve-ssr": {
      "dependsOn": ["prebuild"],
      "executor": "@nguniversal/builders:ssr-dev-server",
      "configurations": {
        "development": {
          "browserTarget": "website:browser:development",
          "serverTarget": "website:server:development"
        },
        "production": {
          "browserTarget": "website:browser:production",
          "serverTarget": "website:server:production"
        }
      },
      "defaultConfiguration": "development"
    },
    "prerender": {
      "dependsOn": [
        "prebuild",
        "^browser",
        "^server"
      ],
      "executor": "@nguniversal/builders:prerender",
      "options": {
        "routesFile": "apps/website/src/app/routes.txt"
      },
      "configurations": {
        "production": {
          "browserTarget": "website:browser:production",
          "serverTarget": "website:server:production"
        },
        "development": {
          "browserTarget": "website:browser:development",
          "serverTarget": "website:server:development"
        }
      },
      "defaultConfiguration": "production"
    },
    "deploy": {
      "dependsOn": ["prebuild"],
      "executor": "@angular/fire:deploy",
      "options": {
        "ssr": "cloud-run",
        "prerender": true,
        "firebaseProject": "portfolio-a59e2",
        "firebaseHostingSite": "portfolio-a59e2",
        "functionName": "ssr-website",
        "functionsNodeVersion": "18.14",
        "region": "us-central1",
        "browserTarget": "website:browser:production",
        "serverTarget": "website:server:production",
        "prerenderTarget": "website:prerender:production",
        "outputPath": "dist/apps/website/run"
      }
    }
  },
  "tags": []
}
