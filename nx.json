{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "portfolio",
  "affected": {
    "defaultBase": "main"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "browser",
          "server",
          "build"
        ],
        "accessToken": "MGZjYWU3ODYtODRjNi00ODRlLWE1ZWUtOTI5NWRkNzM2MTc0fHJlYWQtd3JpdGU="
      }
    }
  },
  "targetDefaults": {
    "browser": {
      "dependsOn": [
        "^browser"
      ]
    },
    "server": {
      "dependsOn": [
        "^server"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ]
    }
  },
  "generators": {
    "@nrwl/angular:application": {
      "e2eTestRunner": "none",
      "linter": "eslint",
      "routing": true,
      "skipTests": true,
      "standalone": true,
      "style": "sass",
      "unitTestRunner": "none"
    },
    "@nrwl/angular:library": {
      "linter": "eslint",
      "skipModule": true,
      "unitTestRunner": "none"
    },
    "@nrwl/angular:component": {
      "displayBlock": true,
      "export": true,
      "skipTests": true,
      "standalone": true,
      "style": "sass"
    }
  },
  "defaultProject": "website",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "sharedGlobals": [],
    "production": [
      "default",
      "!{projectRoot}/.eslintrc.json"
    ]
  }
}
