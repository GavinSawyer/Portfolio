{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "portfolio",
  "affected": {
    "defaultBase": "main"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "browser",
          "server"
        ]
      }
    }
  },
  "targetDefaults": {
    "browser": {
      "dependsOn": [
        "^browser"
      ]
    },
    "server": {
      "dependsOn": [
        "^server"
      ]
    },
    "prerender": {
      "dependsOn": [
        "^prerender"
      ]
    }
  },
  "generators": {
    "@nrwl/angular:application": {
      "style": "sass",
      "linter": "eslint",
      "unitTestRunner": "none",
      "e2eTestRunner": "none"
    },
    "@nrwl/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "none"
    },
    "@nrwl/angular:component": {
      "style": "sass"
    }
  },
  "defaultProject": "website",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "sharedGlobals": [],
    "production": [
      "default",
      "!{projectRoot}/.eslintrc.json"
    ]
  }
}
